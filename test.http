@uri = http://localhost:8080

### Login
# @name login
POST {{uri}}/api/v1/user/login
Content-Type: application/json

{
    "account": "jrmarcco@gmail.com",
    "credential": "<passwd>",
    "account_type": "email",
    "verify_type": "passwd"
}


### Refresh Token
POST {{uri}}/api/v1/user/refresh_token
Content-Type: application/json

{
    "refresh_token": "{{login.response.body.$.data.refresh_token}}"
}


### Save Biz Info
POST {{uri}}/api/v1/biz_info/save
X-ACCESS-TOKEN: {{login.response.body.$.data.access_token}}
Content-Type: application/json

{
    "biz_type": "individual",
    "biz_key": "test_business_info_4",
    "biz_name": "test business info 4",
    "contact": "test contact",
    "contact_email": "test_contact_email_4@example.com"
}


### Update Biz Info
PUT {{uri}}/api/v1/biz_info/update
X-ACCESS-TOKEN: {{login.response.body.$.data.access_token}}
Content-Type: application/json

{
    "id": 13,
    "biz_name": "updated business info 1",
    "contact": "updated contact",
    "contact_email": "updated_contact_email_1@example.com"
}


### Search Biz Info
GET {{uri}}/api/v1/biz_info/search?offset=0&limit=10
X-ACCESS-TOKEN: {{login.response.body.$.data.access_token}}


### Find Biz Info By Id
GET {{uri}}/api/v1/biz_info/get?biz_id=4
X-ACCESS-TOKEN: {{login.response.body.$.data.access_token}}


### Get Business Config
GET {{uri}}/api/v1/biz_config/get?biz_id=1
X-ACCESS-TOKEN: {{login.response.body.$.data.access_token}}


### Save Biz Config
POST {{uri}}/api/v1/biz_config/save
X-ACCESS-TOKEN: {{login.response.body.$.data.access_token}}
Content-Type: application/json

{
    "biz_id": 1,
    "rate_limit": 100,
    "channel_config": {
        "channels": [
            {
                "channel": 2,
                "priority": 1,
                "enabled": true
            }
        ],
        "retry_policy_config": {
            "initial_interval": 2000,
            "max_interval": 120000,
            "max_retry_times": 8
        }
    },
    "quota_config": {
        "daily": {
            "sms": 100,
            "email": 300
        },
        "monthly": {
            "sms": 1500,
            "email": 5000
        }
    },
    "callback_config": {
        "service_name": "kuryr-admin",
        "retry_policy_config": {
            "initial_interval": 2000,
            "max_interval": 30000,
            "max_retry_times": 5
        }
    }
}



### List Provider
GET {{uri}}/api/v1/provider/list
X-ACCESS-TOKEN: {{login.response.body.$.data.access_token}}



### Save Provider
POST {{uri}}/api/v1/provider/save
X-ACCESS-TOKEN: {{login.response.body.$.data.access_token}}
Content-Type: application/json

{
    "provider_name": "测试供应商",
    "channel": 1,
    "endpoint": "http://localhost:8090/v1/sms/send",
    "region_id": "jrmarcco-local",
